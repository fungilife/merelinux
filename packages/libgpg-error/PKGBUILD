#!/bin/bash
# shellcheck disable=SC2034,SC2154

pkgname=(libgpg-error libgpg-error-dev)
pkgver=1.42
pkgrel=2
pkgdesc='A small library that defines common error values for all GnuPG components.'
arch=(x86_64)
url='https://gnupg.org/software/libgpg-error/'
license=(GPL2 LGPL)
groups=()
depends=()
makedepends=()
options=()
changelog=ChangeLog

source=(
    "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-${pkgver}.tar.bz2"
)

sha256sums=(
    fc07e70f6c615f8c4f590a8e37a9b8dd2e2ca1e9408f8e60459c67452b925e23
)


build() {
    cd_unpacked_src
    ./configure --prefix=/usr \
        --enable-shared \
        --enable-static
}

package_libgpg-error() {
    pkgfiles=(
        usr/lib/lib*.so.*
    )
    depends=(
        "ld-musl-$(arch).so.1"
    )
    provides=(
        libgpg-error.so.0
    )
    std_package
}

package_libgpg-error-dev() {
    pkgfiles=(
        usr/bin
        usr/lib/lib*.a
        usr/lib/lib*.so
        usr/lib/pkgconfig
        usr/include
        usr/share
    )
    depends=(
        "ld-musl-$(arch).so.1"
        "libgpg-error=${pkgver}"
    )
    std_split_package
}
