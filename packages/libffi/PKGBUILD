#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(libffi libffi-dev)
pkgver=3.3
pkgrel=1
pkgdesc='A portable Foregin Function Interface library.'
arch=(x86_64)
url='http://sourceware.org/libffi/'
license=(BSD)
groups=(base)
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "ftp://sourceware.org/pub/libffi/libffi-${pkgver}.tar.gz"
)
sha256sums=(
    72fba7922703ddfa7a028d513ac15a85c8d54c8d67f55fa5a4802885dc652056
)


build() {
    cd_unpacked_src
    CFLAGS+=" -fPIC" \
      ./configure \
      --prefix='' \
      --includedir=/include \
      --enable-static \
      --enable-shared
    make
}

package_libffi() {
    pkgfiles=(
        "lib/libffi.so.*"
    )
    depends=(
        musl
    )
    std_package
}

package_libffi-dev() {
    pkgfiles=(
        include
        "lib/*.a"
        "lib/*.so"
        lib/pkgconfig
    )
    depends=(libffi)
    std_split_package
}
