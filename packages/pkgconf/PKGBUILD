#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

rationale='Many packages use the pkg-config functionality to locate libraries'
pkgname=pkgconf
pkgver=1.7.3
pkgrel=1
pkgdesc='An API-driven pkg-config replacement'
arch=('x86_64')
url='https://github.com/pkgconf/pkgconf'
license=('BSD')
groups=('base')
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "https://distfiles.dereferenced.org/pkgconf/pkgconf-${pkgver}.tar.xz"
)

sha256sums=(
    b846aea51cf696c3392a0ae58bef93e2e72f8e7073ca6ad1ed8b01c85871f9c0
)


build() {
    cd_unpacked_src
    LDFLAGS='-static -Wl,-static' \
      ./configure \
      --prefix='' \
      --disable-shared \
      --with-system-libdir=/lib \
      --with-system-includedir=/include
    make
}

package() {
    cd_unpacked_src
    make DESTDIR="$pkgdir" install
    ln -s pkgconf "${pkgdir}/bin/pkg-config"
}
