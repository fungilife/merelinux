#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

rationale='The packaging of ncurses for the final system requires utilities that ship with ncurses, so it has a self-dependency'
pkgname=(
    ncurses
    ncurses-terminfo
    libncurses-dev
)
pkgver=6.2
pkgrel=1
pkgdesc='An API for writing text-based user interfaces'
arch=(x86_64)
url='http://www.gnu.org/software/ncurses'
license=(GPL2)
groups=(base)
depends=()
makedepends=(
    ncurses
    ncurses-terminfo
)
options=()
changelog=ChangeLog

source=(
    "http://ftp.gnu.org/gnu/ncurses/ncurses-${pkgver}.tar.gz"
    https://invisible-mirror.net/archives/ncurses/current/termcap.src.gz
)
sha256sums=(
    30306e0c76e0f9f1f0de987cf1c82a5c21e1ce6568b9227f7da5b71cbea86c9d
    1e02c6f809d4ff7b2742c05fcddd6b19e8bdc412414d6003479eb62a0c87c6f6
)


build() {
    cd_unpacked_src
    zcat "$srcdir"/termcap.src.gz >termcap
    ./ncurses/tinfo/MKfallback.sh /share/terminfo/ termcap tic infocmp \
        linux vt100 xterm xterm-256color >ncurses/fallback.c
    CFLAGS="$CFLAGS -fPIC -static" \
        ./configure \
        --prefix='' \
        --with-fallbacks="linux vt100 xterm xterm256-color" \
        --disable-debug \
        --without-tests \
        --disable-nls \
        --without-cxx-binding \
        --without-dlsym \
        --enable-widec \
        --enable-sigwinch \
        --includedir=/include \
        --mandir=/share/man
    make
}

package_ncurses() {
    pkgfiles=(bin)

    cd_unpacked_src
    make DESTDIR="${pkgdirbase}/dest" install

    cd "${pkgdirbase}/dest" || return 1
    for lib in ncurses form panel menu ; do
        ln -s lib${lib}w.a lib/lib${lib}.a
    done
    ln -s libncurses.a lib/libcurses.a
    ln -s ncursesw include/ncurses

    find ${pkgfiles[@]} | cpio -dump --quiet "$pkgdir"
    # ncurses6w-config is in -dev and clear/reset are in busybox
    rm "$pkgdir"/bin/{ncursesw6-config,clear,reset}
}

package_ncurses-terminfo() {
    pkgfiles=(share/terminfo)
    depends=(ncurses)
    std_split_package
}

package_libncurses-dev() {
    pkgfiles=(
        bin/ncursesw6-config
        include
        lib/*.a
    )
    cd "${pkgdirbase}/dest" || return 1
    ln -s ncursesw6-config bin/ncurses6-config
    std_split_package
}
