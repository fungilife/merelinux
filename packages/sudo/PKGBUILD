#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(sudo)
pkgver=1.9.7p2
pkgrel=1
pkgdesc='Tool for delegating authority to users and groups.'
arch=(x86_64)
url='http://www.sudo.ws/'
license=(BSD)
groups=()
depends=()
makedepends=()
options=(emptydirs)
changelog=ChangeLog
source=(
    "http://www.sudo.ws/sudo/dist/sudo-${pkgver}.tar.gz"
)

sha256sums=(
    28b5ee725dbf89a7852f42f309ca877d2810a9531b4eecfe59f3a84b6b4afca8
)


build() {
    cd_unpacked_src
    CFLAGS+=' -fPIC -static' \
      LDFLAGS='-static -Wl,-static' \
      ./configure \
      --prefix=/usr \
      --libexecdir=/usr/lib/sudo \
      --enable-static \
      --disable-shared
    make
}

package() {
    options=(emptydirs)
    backup=(etc/sudoers etc/sudo.conf)
    pkgfiles=(
        usr/bin
        etc/sudo.conf
        etc/sudoers
        etc/sudoers.d
        usr/sbin
        usr/share/man
    )
    std_package
}
