#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jeremy@merelinux.org>

pkgname=mksh
pkgver=R59c
pkgrel=2
pkgdesc='The MirBSD Korn Shell'
arch=(x86_64)
url='https://www.mirbsd.org/mksh.htm'
license=(BSD)
groups=(core)
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "https://github.com/MirBSD/mksh/archive/mksh-${pkgver}.tar.gz"
)

sha256sums=(
    e5942607eb930ba6ce3303c4a0db0733371f210c9ce6d5d4b9cc202c76360343
)


build() {
    cd_unpacked_src
    LDSTATIC='-static' sh ./Build.sh -r -j
}

package() {
    cd_unpacked_src
    install -d "${pkgdir}/bin"
    install -d "${pkgdir}/share/man/man1"
    install -m 0755 mksh "${pkgdir}/bin/"
    install -c -o root -g bin -m 444 lksh.1 mksh.1 "${pkgdir}/share/man/man1/"
}
